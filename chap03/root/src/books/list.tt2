[% # This is a TT comment. -%]

[% META title = 'Book List' -%]

<table>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Author(s)</th>
    <th>Links</th>
  </tr>
  [% FOREACH book IN books -%]
  <tr>
    <td>[% book.title %]</td>
    <td>[% book.rating %]</td>
    <td>([% book.author_count | html %]) [% book.author_list | html %]</td>
    <td>
	<a href="[% c.uri_for(c.controller.action_for('delete'), [book.id]) %]">Delete</a>
    </td>
  </tr>
  [% END -%]
</table>
